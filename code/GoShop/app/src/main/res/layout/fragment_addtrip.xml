<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    tools:showIn="@layout/activity_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment
        android:id="@+id/autocomplete_fragment_pickup"
        android:layout_height="62dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment" />

    <fragment
        android:id="@+id/autocomplete_fragment_destination"
        android:layout_height="62dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment" />
    
    <TextView
        android:id="@+id/text_addtrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

//TIMESLOT
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="62dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/TimeSlot"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/timeSlot"
            android:layout_width="330dp"
            android:layout_height="42dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:hint="Time frame of trip 00:00-00:00" />

    </com.google.android.material.textfield.TextInputLayout>

//DATE
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="62dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/Date"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date"
            android:layout_width="330dp"
            android:layout_height="42dp"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:hint="Date (DD/MM/YY)" />

    </com.google.android.material.textfield.TextInputLayout>

    //TYPE OF CAR
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="62dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/TypeOfCarRequired"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/typeOfCarRequired"
            android:layout_width="330dp"
            android:layout_height="42dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:hint="CarType (Regular/Wheelchair)" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnAddTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:text="Add trip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>