<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_userhome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_heading"
        android:layout_height="62dp"
        android:layout_width="337dp"
        android:textSize="24sp"
        android:text="GoShop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_height="190dp"
        android:layout_width="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:textSize="18sp"
        android:text="GoShop was created to help those who require assistance with their supermarket shopping. A friendly volunteer will collect you from your chosen location, assist you with your shopping and drop you back home."

 />
    <TextView
        android:id="@+id/text_press"
        android:layout_height="62dp"
        android:layout_width="337dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:text="Press:"/>

    <TextView
        android:id="@+id/text_toaddtrip"
        android:layout_height="62dp"
        android:layout_width="337dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:textSize="18sp"
        android:text="To add a supermarket trip"/>

    <TextView
        android:id="@+id/text_toviewtrips"
        android:layout_height="62dp"
        android:layout_width="337dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:textSize="18sp"
        android:text="To view trips"/>

    <TextView
        android:id="@+id/text_toviewaccountdetails"
        android:layout_height="62dp"
        android:layout_width="337dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:textSize="18sp"
        android:text="To view account
                            details/contact us"/>

    <ImageView android:id="@+id/image_viewaddtrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="60dp"
        android:layout_gravity="center"
        android:maxHeight="60dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/ic_add_black_24dp" />


    <ImageView android:id="@+id/image_viewtrips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="60dp"
        android:layout_gravity="center"
        android:maxHeight="60dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/ic_directions_car_black_24dp" />

    <ImageView android:id="@+id/image_viewsettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="60dp"
        android:layout_gravity="center"
        android:maxHeight="60dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/ic_settings_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>