<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/autocomplete_fragment_start"
        android:layout_height="62dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment" />

    <TextView
        android:id="@+id/text_addavailability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    //DATE
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="62dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/Date"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date"
            android:layout_width="330dp"
            android:layout_height="42dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="36dp"
            android:hint="Date (DD/MM/YY)" />


    </com.google.android.material.textfield.TextInputLayout>

//TIMESLOT
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="62dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/TimeSlot"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/timeSlot"
            android:layout_width="330dp"
            android:layout_height="42dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:hint="Time slot (00:00-00:00)" />

    </com.google.android.material.textfield.TextInputLayout>

    //TYPE OF CAR
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="62dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/TypeOfCar"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/typeOfCar"
            android:layout_width="330dp"
            android:layout_height="42dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:hint="CarType (Regular/Wheelchair)" />

    </com.google.android.material.textfield.TextInputLayout>



//DISTANCE WILLING TO TRAVEL
    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="62dp"
        android:layout_width="270dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/DistanceWillingToTravel"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/travelDist"
            android:layout_width="330dp"
            android:layout_height="42dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:hint="Distance willing to travel in km" />

//ADD AVAILABILITY
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnAddAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="130dp"
        android:layout_marginLeft="130dp"
        android:text="Add availability"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

